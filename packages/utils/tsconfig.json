{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "jsx": "preserve",
    "sourceMap": true,
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021", "DOM"],
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [],
  },
  "include": ["./src/**/*"]
}