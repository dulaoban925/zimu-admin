{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "baseUrl": ".",
    "declarationDir": "./dist/types",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "jsx": "preserve",
    "target": "ES6",
    "sourceMap": true,
    "lib": ["ES2022", "DOM"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": []
  },
  "include": ["./src/**/*"],
  "references": [{ "path": "./tsconfig.build.json" }]
}