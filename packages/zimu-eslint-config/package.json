{
  "name": "@zimu/eslint-config",
  "version": "1.0.0",
  "packageManager": "pnpm@8.12.0",
  "description": "个人 eslint 通用配置工具",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": "./dist/index.js",
  "scripts": {
    "dev": "eslint-config-inspector --config eslint-inspector.config.ts",
    "build:dev": "eslint-config-inspector build --config eslint-inspector.config.ts",
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix"
  },
  "keywords": [
    "eslint-config",
    "zimu"
  ],
  "author": "SuperYing",
  "license": "MIT",
  "devDependencies": {
    "@eslint/config-inspector": "^0.5.3",
    "@types/eslint": "^9.6.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "eslint": "^9.8.0",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "eslint-config-flat-gitignore": "^0.1.8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-antfu": "^2.3.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import-x": "^3.1.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-n": "^17.10.1",
    "eslint-plugin-perfectionist": "^3.1.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "eslint-plugin-unused-imports": "^4.0.1",
    "eslint-plugin-vue": "^9.27.0",
    "globals": "^15.9.0",
    "jsonc-eslint-parser": "^2.4.0",
    "local-pkg": "^0.5.0",
    "typescript-eslint": "^8.0.0",
    "vue-eslint-parser": "^9.4.3"
  },
  "peerDependencies": {
    "eslint": "^9.8.0"
  }
}
