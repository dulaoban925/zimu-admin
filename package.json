{
  "name": "zimu-admin",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "pnpm dev",
    "start:server": "pnpm run -C server start",
    "dev": "pnpm build:packages && vite",
    "build": "pnpm build:packages&& vue-tsc && vite build",
    "build:packages": "run-p build:icons build:utils",
    "build:icons": "pnpm run -C packages/zimu-icons build",
    "build:utils": "pnpm run -C packages/zimu-utils build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@better-scroll/core": "^2.5.1",
    "@element-plus/icons": "^0.0.11",
    "@vueuse/core": "^10.1.2",
    "@zimu/icons": "workspace:^",
    "@zimu/utils": "workspace:^1.0.0",
    "axios": "^1.4.0",
    "crypto-js": "^4.1.1",
    "element-plus": "^2.6.1",
    "face-api.js": "^0.22.2",
    "lodash-es": "^4.17.21",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.3",
    "qs": "^6.12.2",
    "vue": "^3.3.4",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.26.0",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/crypto-js": "^4.1.1",
    "@types/node": "^20.2.5",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "@zimu/eslint-config": "workspace:^",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n": "^17.10.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-vue": "^9.27.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "sass": "^1.62.1",
    "tsx": "^4.17.0",
    "typescript": "^5.0.2",
    "unplugin-auto-import": "^0.18.2",
    "vite": "^4.3.2"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "npm run lint:fix"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
